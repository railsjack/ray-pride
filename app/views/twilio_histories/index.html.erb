<html style="height: 100%;">
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<%= render 'layouts/shim' %>
<body class="twilio-body" style="height: 100%;">
<div class="container-fluid" style="width: 100%;">
  <div class="row">
    <div class="col-md-6">

    </div>
    <div class="col-md-6" style="margin-top: 10px;">
      <%= form_for @twilio_history, remote: true, html: {class: 'twilio-form pull-right'} do |f| %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-6">
            <%= f.text_field :from, placeholder: 'From Number',
                             value: '+1'+current_user.phone_number, readonly: true, class: 'pull-left' %>
            <%= f.text_field :to, placeholder:'To Number', class: 'pull-left' %>
          </div>
          <div class="col-md-6">
            <%= f.text_field :body, placeholder:'Body', class: 'pull-left' %>
            <%= f.submit "Send SMS" %>

          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <!--div class="row-fluid" style="margin-top: 15px; position: fixed; right: 0; background-color: white;">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
      <div class="clearfix"></div>
    </div>

  </div-->

  <table class="table" width="100%">
    <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Body</th>
      <th>*</th>
    </tr>
    </thead>
    <tbody id="twilio-table-body">
    </tbody>
  </table>
  <span id="last"></span>
</div>

</body>
<script>
  load_data();
</script>
</html>